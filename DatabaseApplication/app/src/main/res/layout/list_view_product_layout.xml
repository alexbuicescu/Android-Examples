<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/list_view_product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_view_product_image"
        android:padding="10dp">

        <TextView
            android:id="@+id/list_view_product_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Name"/>
        <TextView
            android:id="@+id/list_view_product_divider_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_view_product_name_text_view"
            android:textSize="20sp"
            android:text=" --- "/>
        <TextView
            android:id="@+id/list_view_product_quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_view_product_divider_text_view"
            android:textSize="20sp"
            android:text="2"/>
        <TextView
            android:id="@+id/list_view_product_product_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_view_product_name_text_view"
            android:text="Product id: "/>
        <TextView
            android:id="@+id/list_view_product_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_view_product_product_id_text_view"
            android:layout_below="@+id/list_view_product_name_text_view"
            android:text="0"/>
    </RelativeLayout>

</RelativeLayout>